<html>

<head>
    <%- include('../public/partials/head'); %>
        <title>
            Create Room
        </title>
        <style>
            body {
                background-color: lightgrey;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 10px;
            }

            .container {
                max-width: 700px;
                width: 100%;
                background: #fff;
                padding: 25px 30px;
                border-radius: 5px;
            }

            .container .title {
                font-size: 25px;
                font-weight: 500;
            }
        </style>
        <script>
            function vaildTime() {
                document.getElementById("timeError").innerHTML = "";
            }

            function createRoom() {
                if (document.getElementById("rName").value == null || (document.getElementById("rName").value).trim() == "") {
                    document.getElementById("nError").innerHTML = "<br />" + "Please give the room a name.";
                }
                else if (document.getElementById("rSize").value == null || (document.getElementById("rSize").value).trim() == "") {
                    document.getElementById("sError").innerHTML = "<br />" + "Please give the room a volume.";
                }
            }
        </script>
</head>

<body>
    <%- include('../public/partials/nav'); %>
        <div class="container">
            <div class="title">Create Room</div>
            <form action="#">
                <div class="roominfo">
